<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name = "hibernate.dialect">
            org.hibernate.dialect.MySQLDialect
        </property>

        <property name = "hibernate.connection.driver_class">
            org.h2.Driver
        </property>

        <property name = "hibernate.connection.url">
            jdbc:h2:file:./h2db
        </property>

        <property name = "hibernate.connection.username">
            sa
        </property>

        <property name = "hibernate.connection.password">
        </property>

        <mapping class="com.project.stocks.entities.Brand"/>
    </session-factory>
</hibernate-configuration>